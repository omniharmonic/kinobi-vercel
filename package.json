{
  "name": "kinobi-vercel",
  "version": "1.0.9",
  "description": "Smart chore tracker with time cycles, point scoring, and leaderboards - Vercel Edition",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000",
    "dev:vercel": "vercel dev",
    "build": "npm run build:css && vite build",
    "build:css": "npx tailwindcss -c tailwind.config.cjs -i ./src/tailwind.css -o ./public/tailwind.css --minify",
    "start": "vercel dev",
    "deploy": "vercel --prod",
    "migrate": "node migrate-data.js"
  },
  "dependencies": {
    "@vercel/kv": "^1.0.1",
    "@vercel/node": "^3.0.21",
    "dotenv": "^16.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.38",
    "sqlite3": "^5.1.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vercel": "^32.4.1",
    "vite": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "chore-tracker",
    "household",
    "points",
    "leaderboard",
    "vercel",
    "serverless"
  ],
  "author": "Kinobi Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/kinobi-vercel.git"
  },
  "homepage": "https://your-project-name.vercel.app"
}
